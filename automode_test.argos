<?xml version="1.0" ?>
<argos-configuration>
  <!-- ************* -->
  <!-- * Framework * -->
  <!-- ************* -->
  <framework>
    <experiment length="60"
                ticks_per_second="10" random_seed="0"/>
  </framework>

  <!-- ****************** -->
  <!-- * Loop functions * -->
  <!-- ****************** -->
  <!--loop_functions label="rab_selective_test" output="output.txt" /-->

  <!-- *************** -->
  <!-- * Controllers * -->
  <!-- *************** -->
  <controllers>
	<!-- TRANSMITTER -->  
    <automode_controller id="automode"
                        library="/home/aligot/Desktop/E-puck/argos3-aligot/build/controllers/AutoMoDe/libautomode.so">
      <actuators>
        <!--epuck_wheels implementation="default"/-->
        <!--epuck_range_and_bearing implementation="medium" show_rays="false" medium="rab" data_size="4"/-->
      </actuators>
      <sensors>
        <!--epuck_range_and_bearing implementation="medium" medium="rab" show_rays="true" data_size="4"/-->
      </sensors>
      <params readable='true' history='true' fsm-config="--nstates 4 --s0 1 --n0 3 --n0x0 2 --c0x0 3 --p0x0 0.69 --n0x1 2 --c0x1 4 --p0x1 3 --w0x1 10.4 --n0x2 0 --c0x2 2 --p0x2 0.77 --s1 2 --n1 3 --n1x0 2 --c1x0 4 --p1x0 9 --w1x0 1.7 --n1x1 2 --c1x1 5 --p1x1 0.12 --n1x2 3 --c1x2 0 --p1x2 0.07 --s2 4 --att2 5 --n2 4 --n2x0 1 --c2x0 1 --p2x0 7 --w2x0 0.6 --n2x1 3 --c2x1 0 --p2x1 0.6 --n2x2 1 --c2x2 1 --p2x2 5 --w2x2 16.1 --n2x3 1 --c2x3 3 --p2x3 0.25 --s3 1 --n3 3 --n3x0 3 --c3x0 3 --p3x0 0.94 --n3x1 0 --c3x1 3 --p3x1 0.48 --n3x2 3 --c3x2 1 --p3x2 9 --w3x2 4.9"/>
    </automode_controller>
  </controllers>

  <!-- ********* -->
  <!-- * Arena * -->
  <!-- ********* -->
  <arena size="5, 5, 1" center="0,0,0">
    <box id="wall_n" size="2, 0.12, 0.12" movable="false">    <!-- Longueur, largeur, hauter -->
       <body position="2, 0, 0" orientation="90, 0, 0"/>
    </box>
    <box id="wall_s" size="2, 0.12, 0.12" movable="false"> 
     <body position="-2, 0, 0" orientation="90, 0, 0"/> 
    </box>
    <box id="wall_w" size="2, 0.12, 0.12" movable="false"> 
     <body position="0, 2, 0" orientation="0, 0, 0"/> 
    </box>
    <box id="wall_e" size="2, 0.12, 0.12" movable="false"> 
     <body position="0, -2, 0" orientation="0, 0, 0"/> 
    </box>
    <box id="wall_n_w" size="1.5, 0.12, 0.12" movable="false">  
       <body position="1.5, 1.5, 0" orientation="315, 0, 0"/>
    </box>
  <box id="wall_n_e" size="1.5, 0.12, 0.12" movable="false">  
       <body position="1.5, -1.5, 0" orientation="45, 0, 0"/>
    </box>
    <box id="wall_s_w" size="1.5, 0.12, 0.12" movable="false">  
       <body position="-1.5, -1.5, 0" orientation="135, 0, 0"/>
    </box>
  <box id="wall_s_e" size="1.5, 0.12, 0.12" movable="false">  
       <body position="-1.5, 1.5, 0" orientation="225, 0, 0"/>
    </box>

  <!-- ********** -->
  <!-- * E-Puck * -->
  <!-- ********** -->
    <e-puck id="epuck1">
      <body position="0, 0, 0"
            orientation="0, 0, 0"/>
      <controller config="automode" />
    </e-puck>

    <e-puck id="epuck2">
      <body position="0.5, 0, 0"
            orientation="180, 0, 0"/>
      <controller config="automode" />
    </e-puck>
  </arena>

  <!-- ******************* -->
  <!-- * Physics engines * -->
  <!-- ******************* -->
  <physics_engines>
    <dynamics2d id="dyn2d" />
  </physics_engines>

  <!-- ********* -->
  <!-- * Media * -->
  <!-- ********* -->
  <media>
    <led id="leds" grid_size="1,1,1"/>
    <range_and_bearing id="ircom"/>
    <range_and_bearing id="rab"/>
  </media>

  <!-- ***************** -->
  <!-- * Visualization * -->
  <!-- ***************** -->
  <visualization>
    <qt-opengl>
      <camera>
        <placement idx="0"
                   position="0,0,4.5"
                   look_at="0,0,0"
                   lens_focal_length="30" />
      </camera>
    </qt-opengl>
  </visualization>

</argos-configuration>
